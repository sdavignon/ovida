{
  "name": "ovida",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@8.15.6",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "test": "turbo test",
    "test:unit": "pnpm --filter @ovida/api test:unit",
    "build:web": "pnpm --filter @ovida/web build",
    "export:web": "cross-env NEXT_SHOULD_EXPORT=true pnpm --filter @ovida/web exec next export -o out"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "turbo": "^1.13.3"
  }
}
